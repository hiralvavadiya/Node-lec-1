<style>
  table{
        margin: 0 auto;
    }
    h1{
        text-align: center;
    }
</style>

<h1>Registration Form</h1>

<table>
    <form class="row g-3">
        <tr>
            <div class="col-md-6">
                <td><label for="inputFname" class="form-label">First Name</label></td>
                <td><input type="text" class="form-control" id="inputFname"></td>
              </div>
        </tr>
        <tr>
        <div class="col-md-6">
          <td><label for="inputLname" class="form-label">Last Name</label></td>
          <td><input type="text" class="form-control" id="inputLname"></td>
        </div>
        </tr>
        <tr>
        <div class="col-md-6">
          <td><label for="inputEmail4" class="form-label">Email</label></td>
          <td><input type="email" class="form-control" id="inputEmail4"></td>
        </div>
    </tr>
    <tr>
        <div class="col-md-6">
          <td><label for="inputPassword4" class="form-label">Password</label></td>
          <td><input type="password" class="form-control" id="inputPassword4"></td>
        </div>
    </tr>
    <tr>
        <div class="col-12">
          <td><label for="inputAddress" class="form-label">Address</label></td>
          <td><input type="text" class="form-control" id="inputAddress" placeholder="1234 Main St"></td>
        </div>
    </tr>
    <tr>
        <div class="col-12">
          <td><label for="inputAddress2" class="form-label">Address 2</label></td>
          <td><input type="text" class="form-control" id="inputAddress2" placeholder="Apartment, studio, or floor"></td>
        </div>
    </tr>
    <tr>
        <div class="col-md-6">
          <td><label for="inputCity" class="form-label">City</label></td>
          <td><input type="text" class="form-control" id="inputCity"></td>
        </div>
    </tr>
    <tr>
        <div class="col-md-4">
          <td><label for="inputState" class="form-label">State</label></td>
          <td><select id="inputState" class="form-select">
            <option selected>Choose...</option>
            <option>Gujarat</option>
            <option>Kerala</option>
            <option>Goa</option>
          </select></td>
        </div>
    </tr>
    <tr>
        <div class="col-md-2">
          <td><label for="inputZip" class="form-label">Zip</label></td>
          <td><input type="text" class="form-control" id="inputZip"></td>
        </div>
    </tr>
        <tr>
        <div class="col-12">
        
        <td colspan="2">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="gridCheck">
            <label class="form-check-label" for="gridCheck">
              Check me out
            </label>
          </div>
        </td>
        </div>
        </tr>
        <tr>
        <div class="col-12">
        <td colspan="2">
          <button type="submit" class="btn btn-primary">Sign in</button>
        </div>
        </td>
        </tr>
    </form>
</table>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
